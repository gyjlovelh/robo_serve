{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "declaration": false,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "outDir": "dist/out-tsc",
        "baseUrl": ".",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es5", "es6", "dom", "es2015.collection"],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}